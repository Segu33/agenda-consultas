extends layout

block content
  .container
    h2 Iniciar Sesión

    form(method="POST", action="/login")
      .form-group
        label(for="email") Correo electrónico
        input(type="email", name="email", required)

      .form-group
        label(for="password") Contraseña
        input(type="password", name="password", required)

      button(type="submit") Ingresar