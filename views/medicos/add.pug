extends ../layout

block content
  h1.text-center.mb-4 Agregar Médico

  style.
    form {
      max-width: 500px;
      margin: 0 auto;
      padding: 20px;
      background-color: #f8f9fa;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    label {
      font-weight: bold;
      display: block;
      margin-top: 15px;
      color: #333;
    }

    input[type="text"],
    select {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      border: 1px solid #ced4da;
      border-radius: 4px;
      box-sizing: border-box;
      font-size: 16px;
    }

    button[type="submit"] {
      width: 100%;
      padding: 12px;
      background-color: #007bff;
      color: #fff;
      font-size: 16px;
      border: none;
      border-radius: 4px;
      margin-top: 20px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button[type="submit"]:hover {
      background-color: #0056b3;
    }

  form(action='/medicos/create', method="post")
    label Nombre:
    input(type="text", name="nombre", required)

    label Apellido:
    input(type="text", name="apellido", required)

    label DNI:
    input(type="text", name="dni", required)

    label Email:
    input(type="text", name="email", required)

    label Teléfono:
    input(type="text", name="telefono")

    label Estado:
    select(name="estado", required)
      option(value=true selected) Activo
      option(value=false) Inactivo

    label Especialidad:
    select(name="id_especialidad", required)
      option(value='') -- Seleccionar Especialidad --
      each especialidad in especialidades
        option(value=especialidad.id_especialidad)= especialidad.nombre

    button(type="submit") Guardar
