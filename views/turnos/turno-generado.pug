extends ../layout

block content
  .container.mt-5
    h2 Turno Generado Exitosamente
    ul
      li
        strong Fecha:
        |  #{turno.fecha}
      li
        strong Hora:
        |  #{turno.hora}
      li
        strong Estado:
        |  #{turno.estado}

      li
        strong Médico: 
        if turno.Medico
          | #{turno.Medico.nombre}
        else
          | No especificado

      li
        strong Paciente:
        if turno.Paciente
          | #{turno.Paciente.nombre}
        else
          | No especificado

      li
        strong Sucursal:
        if turno.Sucursal
          | #{turno.Sucursal.nombre}
        else
          | No especificada

      li
        strong Obra social:
        | #{turno.obra_social || 'No especificada'}

      li
        strong Motivo de consulta:
        | #{turno.motivo_consulta || 'No especificado'}

      li
        strong ¿Es sobreturno?:
        | #{turno.es_sobreturno ? 'Sí' : 'No'}

    a.btn.btn-primary.mt-3(href="/") Volver al inicio
