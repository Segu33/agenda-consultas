doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title || "Agenda Médica"
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css")

    style.
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body, html {
        font-family: 'Inter', sans-serif;
        background-color: #f0f8fb;
        color: #1e3a5f;
        width: 100%;
        height: 100%;
      }

      .navbar {
        background-color: #004d66;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 32px;
        flex-wrap: wrap;
        position: sticky;
        top: 0;
        z-index: 1000;
      }

      .navbar .logo img {
        height: 150px;
        width: auto;
        margin-right: 50px;
      }

      .navbar .nav-links {
        display: flex;
        gap: 20px;
      }

      .navbar .nav-links a {
        color: white;
        text-decoration: none;
        font-weight: 600;
        font-size: 15px;
      }

      .navbar .nav-links a:hover {
        text-decoration: underline;
      }

      .navbar .actions a {
        margin-left: 12px;
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        color: white;
        font-weight: bold;
      }

      .green { background-color: #4caf50; }
      .blue { background-color: #2196f3; }
      .dark { background-color: #0d47a1; }

      main {
        display: block;
      }

      .container {
        background-color: white;
        padding: 32px;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 960px;
        margin: auto;
      }

      .hero {
        position: relative;
        width: 100%;
        height: 75vh;
        background: url('/images/clinica-fondo.jpg') center/cover no-repeat;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .hero .overlay {
        background-color: rgba(0, 60, 80, 0.65);
        color: white;
        padding: 40px;
        border-radius: 12px;
        max-width: 80%;
        text-align: center;
      }

      .hero h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
      }

      .hero p {
        font-size: 1.2rem;
      }

      footer {
        background-color: #002f3d;
        color: white;
        text-align: center;
        padding: 16px;
        font-size: 14px;
      }

  body
    .navbar
      .logo
        a(href="/")
          img(src="/images/logo.png", alt="Agenda Consultorios")

      .nav-links
        a(href="/") Inicio
        a(href="/medicos") Médicos
        a(href="/pacientes") Pacientes
        a(href="/turnos") Turnos
        a(href="/Obras Sociales") Obras Sociales
        a(href="/Especialidades") Especialidades
        a(href="/Horarios") Horarios
        a(href="/contacto") Contacto

      .actions
        a(href="/turnos", class="green") Turnos
        a(href="/recetas", class="blue") Recetas
        a(href="/estudios", class="dark") Mis Estudios

    main
      block content

    footer
      p © Luis Segura 2025 - Todos los derechos reservados.
